@model IEnumerable<ContractorFind.Models.Bid>

@{
    ViewBag.Title = "ViewBids";
}

<h2>View Bids</h2>

<table class="table">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GigId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            $@Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GigId)
        </td>
        <td>
            @Html.ActionLink("View company information", "ViewCompany", new { companyId = item.CompanyId })
        </td>
    </tr>
}

</table>
